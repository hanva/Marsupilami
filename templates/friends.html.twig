{% extends 'base.html.twig' %}
{% block title %}
    Hello friends
{% endblock %}

{% block body %}
    <h1>Your friends !</h1>
    {% if friends is empty %}
        <p>Pas encore d'amis :(</p>
    {% else %}
        {% for friend in friends %}
            <form method="POST" action="removeFriends">
                <div>
                    <p> {{ friend }}</p>
                    <input type="hidden" name="id" value="{{ friend.id }}">
                    <button name="add" id="{{ friend.id }}">Supprimer cet ami</button>
                </div>
            </form>
        {% endfor %}
    {% endif %}
    <form method="POST" name="form" action="addFriends">
        <input type="text" name="name" id="nameInput" placeholder="name" list="nameList"/>
        <button name="add">Ajouter en ami</button>
        <br>
        <datalist id="nameList">
        </datalist>
    </form>
{% endblock %}
 {% block javascripts %}
     <script src="{{ asset('build/friends.js') }}"></script>
 {% endblock %}